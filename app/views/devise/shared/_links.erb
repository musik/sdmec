<div class="btn-group">
<%- if controller_name != 'sessions' %>
  <%= link_to "已有账号? 直接登录", new_session_path(resource_name),:class=>"btn" %>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "快速注册", new_registration_path(resource_name),:class=>"btn" %>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to "忘记密码?", new_password_path(resource_name),:class=>"btn" %>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "没有收到激活邮件?", new_confirmation_path(resource_name),:class=>"btn" %>
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "没有收到解锁邮件?", new_unlock_path(resource_name),:class=>"btn" %>
<% end -%>

</div>
<%- if devise_mapping.omniauthable? %>
<div class="btn-group">
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "#{provider.to_s.titleize}登录", omniauth_authorize_path(resource_name, provider),:class=>"btn" %>
  <% end -%>
</div>
<% end -%>