-title "#{@cat["sub_cat_name"]}特卖精选",nil,false
.page-header
  %h1.inline #{@cat["sub_cat_name"]}特卖精选
  -relates = @cat["children"] || @cat["siblings"]
  -if relates
    %small
      -relates.each do |sc|
        =link_to sc["sub_cat_name"],"/fenlei/#{sc["sub_cat_id"].to_s(36)}"

-@hide_fullad = @col1 = true
=render :partial=>"home/items",:locals=>{:cat=>@cat["sub_cat_id"],:results=>@items,:limit=>100}
