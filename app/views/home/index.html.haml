-title t('.title'),nil,false
-@col1 = true
-@hide_fullad = true

-if @temai_cats.present?
  -@temai_cats.each do |cat|
    .temai
      %h2.inline{:id=>cat["sub_cat_id"]}
        =link_to cat["sub_cat_name"],fenlei_link(cat)
      %small
        -cat['children'].each do |scat|
          =link_to scat["sub_cat_name"],fenlei_link(cat)

      =render :partial=>"items",:locals=>{:cat=>cat["sub_cat_id"],:results=>cat["items"],:limit=>3}

-#.row
  -#.span8
-if @sites.present?
  .sites.alert.alert-info
    小站:
    -@sites.each do |s|
      =link_to s.name,root_url(:subdomain=>s.slug)
%ul.nav.nav-tabs
  %li.active
    %a{:href=>'#recommended',:'data-toggle'=>'tab'} 推荐
  %li
    %a{:href=>'#recent',:'data-toggle'=>'tab'} 最新
  %li
    %a{:href=>'#cities',:'data-toggle'=>'tab'} 城市
.tab-content
  .tab-pane.active#recommended
    %h2.inline 名店推荐
    %small
      =link_to '更多',stores_url
      =render :partial=>"stores/creditmap"
    -cache "home_popular",:expires_in=>1.day do
      -#=render :partial=>"stores/pindex3col",:locals=>{:stores=>@stores}
      =render :partial=>"stores/pindex",:locals=>{:stores=>@stores}
  .tab-pane#recent
    %h2.inline 最新收录
    %small=link_to '更多',recent_stores_url
    -cache "home_recent",:expires_in=>1.minutes do
      =render :partial=>"stores/index",:locals=>{:stores=>@stores_recent}
      -#=render :partial=>"stores/index2col",:locals=>{:stores=>@stores_recent}

  .tab-pane#cities
    = render :partial => 'cities/less'
-@hide_cities = true
        
-content_for :footer do    
  =javascript_include_tag "bootstrap-tab"
