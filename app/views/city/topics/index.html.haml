- title t('.title',:city=>@city.name),t('.header',:city=>@city.name)
-meta :keywords,t('.keywords',:city=>@city.name)
-meta :description,t('.description',:city=>@city.name) 

  
-#=debug @topics
-#= page_entries_info @topics, :entry_name => 'topic'
.topics 
  - for topic in @topics
    = link_to topic.name, topic

.clear

=nofollow_sub paginate @topics,:window=>params[:page]==1 ? 20 : 9

-if params[:page].to_i == 1
  %p=t('.description',:city=>@city.name)  