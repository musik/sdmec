-big ||= false
-if entries.empty?
  暂无网站加入
-else 
  .websites
    -if big
      -entry = @entries.shift
      .website
        = link_to entry.name, entry.url,target: "_blank",class: "big"
        %a{href: entry_url(entry)}
          %i.icon-file
    - entries.each do |entry|
      .website
        -if entry.link_status?
          = link_to entry.name, entry.url,target: "_blank"
          %a{href: entry_url(entry)}
            %i.icon-file
        -else
          = link_to entry.name, entry_url(entry),target: "_blank"
          (无反链)
