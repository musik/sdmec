      .container
        .content
          -if @shout
            #shout
          = render 'layouts/messages'
          -if @col1
            .row
              .span12
                =render "layouts/content"
          -elsif @col2l
            .row
              .span3#primary
                =render "layouts/primary"
              .span9
                =render "layouts/content"

          -else
            .row
              .span8
                =render "layouts/content"
              .span4#primary
                =render "layouts/primary"
    = render :partial => 'layouts/belt'
