    %header.navbar.navbar-fixed-top
      %nav.navbar-inner
        .container
          = render 'layouts/navigation'
      -# -if request.url != root_url(:subdomain=>'www')
    #main{:role => "main"}
      .double11#full1
        #mingdian
        -#=javascript_tag 'BAIDU_CLB_fillSlot("504553");'
