  -#= link_to t('appname_city',:city=>@city.name), root_path, :class => 'brand'
-#-else
  -#= link_to t('appname'), root_url(:subdomain=>'www'), :class => 'brand',:rel=>"nofollow"
= link_to t('appname'), root_url(:subdomain=>'www'), :class => 'brand',:rel=>"nofollow"
-if @city.present?
  = link_to @city.name,root_path,:title=>t('appname_city',:city=>@city.name), :class => 'brand brand-mini'
%ul.nav.nav-mini
  -#%li=link_to "首页",root_url(:subdomain=>'www'),:rel=>"nofollow"
  -channels = YAML.load(File.read("#{Rails.root}/config/channels.yml"))
  -channels.delete_if{|k| %w(数码 机票).include? k} if @city.present? && @city.name.length > 4
  =javascript_tag do
    -channels.each do |k,v|
      ="document.write('<li><a href=\"#{v}\" target=\"_blank\" rel=\"nofollow\">#{k}</a></li>')".html_safe
    
  -if @city
    %li=link_to '城市',cities_url(:subdomain=>'www'),:rel=>"nofollow"
%form.navbar-search.pull-left{:action=>search_url(:subdomain=>'www'),:method=>'get'}
  -a={:id=>'q',:type=>"text",:name=>"q"}
  -a.merge! @q.nil? ? {:placeholder=>t('search')} : {:value=>@q}
  .input-append
    %input.search-queryx.input-medium{a}
    %button.btn{:name=>'tb',:type=>"submit"} 淘
    %button.btn{:type=>"submit"} 搜店
  %input{:type=>'hidden',:name=>'live',:value=>1}
